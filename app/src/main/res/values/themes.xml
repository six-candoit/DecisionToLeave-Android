<resources>
    <!-- Base application theme. -->
    <style name="Theme.DecisionToLeave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Decision To Leave TextAppearance -->
    <style name="TextAppearance.DecisionToLeave.Title" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.DecisionToLeave.Body1" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.DecisionToLeave.Body2" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>
</resources>